{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "noEmitOnError": false,
      "noEmit": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": false,
      "noImplicitThis": false,
      "moduleResolution": "node",
      "isolatedModules": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "types": ["node", "jest"],
      "rootDir": ".", 
      "outDir": ".dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "."
          ],
          "@/*": ["../uimo-pwa/platform/*"]
      }
  },
  "include":["./**/*.ts", "./**/*.json", "*.d.ts"],
  "exclude": ["node_modules", "database/queries/Query_.ts", "database/Query copy.ts", "../uimo-pwa"]
}