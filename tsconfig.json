{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "rootDir": ".", 
      "outDir": "../../dist/server",
      "baseUrl": ".",
      "paths": {
          "*": [
              "."
          ]
      },
      "types": [
        "node",
        "mocha"
      ]
  },
  "include": [
    ".",
    "./package.json",
    "./package-lock.json",
    "./addIns/1C/package.json",
    "./addIns/1C/package-lock.json",
    "./applications.json",
    "./settings.json"],
  "exclude": ["node_modules"]
}