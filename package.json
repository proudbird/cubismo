{
  "name": "cubismo",
  "version": "0.1.1",
  "main": "./.dist/core/cubismo.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "postbuild": "npm --prefix /home/cubismo/cubismo/.dist ci --production && npm --prefix /home/cubismo/cubismo/.dist/addIns/1C ci --production",
    "watch_cubismo": "tsc --build tsconfig.json -w",
    "lint": "eslint core/**",
    "test": "jest",
    "start": "node .dist/cli/cli.js ../cubismo.apps -a index",
    "add_index": "node addIndex.js ../cubismo.apps/cubismo.config ../cubismo.apps/index.config",
    "pull_cubismo": "cd /home/cubismo/cubismo && git pull --force",
    "pull_cubes": "cd /home/cubismo/cubismo.apps && git pull --force",
    "build_cubismo": "npm --prefix /home/cubismo/cubismo run build",
    "update": "npm run pull_cubismo && npm run pull_cubes && npm run build_cubismo",
    "serve": "pm2 start /home/cubismo/cubismo/.dist/cli/cli.js --node-args=\"../cubismo.apps -a index\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/proudbird/cubismo.git"
  },
  "homepage": "https://github.com/proudbird/cubismo.git",
  "peerDependencies": {
    "@types/node": "^15.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^17.0.17",
    "@types/sequelize": "^4.28.9",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bodyparser-1c-internal": "^0.0.3",
    "boxen": "^6.2.1",
    "catalogist": "^1.0.4",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "dataroll": "^0.0.6",
    "deepdash": "^5.3.9",
    "demander": "0.0.1",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "hyperlinker": "^1.0.0",
    "i18next": "^21.5.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "node-code-generator": "^1.0.3",
    "nodemailer": "^6.7.2",
    "pg": "^8.6.0",
    "pm2": "^5.2.0",
    "sequelize": "^6.6.2",
    "shortid": "^2.2.16",
    "tslog": "^3.3.1"
  },
  "bin": {
    "cub": "./dist/cli/cli.js"
  }
}
